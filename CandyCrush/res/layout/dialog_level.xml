<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/dialogLevelLayout"
        android:layout_width="540px"
        android:layout_height="300px"
        android:layout_centerInParent="true"
        android:background="@drawable/level"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp" >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:gravity="bottom|center_horizontal" >

            <Space
                android:layout_width="1dp"
                android:layout_height="100dp" />

            <Button
                android:id="@+id/button_level1"
                android:layout_width="422px"
                android:layout_height="95px"
                android:background="@drawable/btn_level1" />

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/button_level2"
                android:layout_width="425px"
                android:layout_height="95px"
                android:background="@drawable/btn_level2" />

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/button_level3"
                android:layout_width="427px"
                android:layout_height="95px"
                android:background="@drawable/btn_level3" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>